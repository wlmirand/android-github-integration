<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="@drawable/header"
    android:paddingLeft="@dimen/header_padding"
    android:paddingBottom="@dimen/header_padding"
    android:orientation="vertical">

    <TextView
        android:id="@+id/logged_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/drawer_header_text_size"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:gravity="left"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:id="@+id/logged_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/header_padding"
        android:layout_above="@id/logged_username"/>

</RelativeLayout>